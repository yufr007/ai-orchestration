# API Keys & Authentication
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_MODEL=sonar
PERPLEXITY_TIMEOUT_MS=600000

# Primary LLM Provider (for agent reasoning)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# or
OPENAI_API_KEY=your_openai_api_key_here

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_OWNER=yufr007

# Database / Persistence
# For local dev (SQLite)
DATABASE_URL=sqlite:///./orchestration.db

# For production (Azure PostgreSQL)
# DATABASE_URL=postgresql://user:password@your-azure-postgres.postgres.database.azure.com:5432/orchestration?sslmode=require

# Azure (optional for production runtime)
AZURE_SUBSCRIPTION_ID=your_subscription_id
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Observability
LANGSMITH_API_KEY=your_langsmith_key_here
LANGSMITH_PROJECT=ai-orchestration

# Rate Limiting
MAX_CONCURRENT_AGENTS=5
MAX_PERPLEXITY_CALLS_PER_HOUR=100
